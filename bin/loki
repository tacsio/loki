#!/bin/bash

PROGRAM=$1
VERSION=$2

#Java
if [[ $PROGRAM = "java" ]]; then
	rm $HOME/.loki/apps/java
	ln -s /opt/java${VERSION} $HOME/.loki/apps/java
fi

#Python
if [[ $PROGRAM = "python" ]]; then
	rm $HOME/.loki/apps/python/bin/* 2> /dev/null

	if [[ $VERSION = "3" ]]; then
		ln -s /opt/python3/bin/python3.4 $HOME/.loki/apps/python/bin/python
		ln -s /opt/python3/bin/pip3.4 $HOME/.loki/apps/python/bin/pip
	else
		ln -s /usr/bin/python $HOME/.loki/apps/python/bin/python
		ln -s /usr/bin/pip $HOME/.loki/apps/python/bin/pip
	fi
fi
